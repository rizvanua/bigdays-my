{
  "name": "bigdays-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel --filter './apps/*' dev",
    "build": "pnpm --recursive build",
    "lint": "pnpm --recursive lint",
    "clean": "pnpm --recursive clean",
    "frontend:dev": "pnpm --filter @bigdays/frontend dev",
    "frontend:build": "pnpm --filter @bigdays/frontend build",
    "backend:dev": "pnpm --filter @bigdays/backend dev",
    "backend:build": "pnpm --filter @bigdays/backend build",
    "backend:deploy": "pnpm --filter @bigdays/backend deploy"
  },
  "devDependencies": {
    "typescript": "^5.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}